<h1>Listagem de Funcionarios</h1>

<%= form_tag funcionarios_url, method: :get do %>
    <%= label_tag :q_cpf, "buscar por cpf" %>
    <%= search_field_tag :q_cpf %>
    <%= submit_tag "Buscar" %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
    

  <tbody>
      <% if @funcionarios.blank?  %>
      <tr><td colspan=5>NÃ£o foi encontrado funcionario. <%= link_to "Ver todos", funcionarios_url %>
</td> </tr>
      <% else %>
        <% @funcionarios.each do |funcionario| %>
          <tr>
            <td><%= funcionario.nome %></td>
            <td><%= funcionario.cpf %></td>
            <td><%= link_to 'Show', funcionario %></td>
            <td><%= link_to 'Edit', edit_funcionario_path(funcionario) %></td>
            <td><%= link_to 'Destroy', funcionario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Funcionario', new_funcionario_path %>
